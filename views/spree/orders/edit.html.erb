<% content_for :search_link do -%>.<% end %>

<% content_for :show_header_links do -%>.<% end -%>
<% @body_id = 'cart' %>
<div data-hook="cart_container" class="col-md-12">
  <h1 class="page-heading"><%= Spree.t(:shopping_cart) %></h1>

  <% if @order.line_items.empty? %>
    <div data-hook="empty_cart">
      <div class="alert alert-info"><%= Spree.t(:your_cart_is_empty) %></div>
      <p><%= link_to Spree.t(:continue_shopping), root_path, class: 'btn btn-default' %></p>
    </div>
    <% content_for :header do -%>
      <%= stylesheet_link_tag 'yoda/stylesheets/spree/frontend/home' -%>
      <%= javascript_include_tag 'yoda/javascripts/spree/frontend/product_show' -%>
      <%= javascript_include_tag 'yoda/javascripts/spree/frontend/product' -%>
    <% end -%>
    <%= render 'spree/products/related_products', products: @products, search: false %>
  <% else %>
    <div data-hook="outside_cart_form">
      <%= form_for @order, url: update_cart_path, html: { id: 'update-cart' } do |order_form| %>
        <div data-hook="inside_cart_form">

          <div data-hook="cart_items" class="table-responsive">
            <%= render partial: 'form', locals: { order_form: order_form } %>
          </div>

          <div class="links col-md-6 navbar-form pull-right text-right" data-hook="cart_buttons">
            <div class="form-group">
              <%= button_tag class: 'btn btn-primary', id: 'update-button' do %>
                <%= Spree.t(:update) %>
              <% end %>
              <%= button_tag class: 'btn btn-lg btn-success', id: 'checkout-link', name: 'checkout' do %>
                <%= Spree.t(:checkout) %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div id="empty-cart" class="col-md-6 pull-left" data-hook>
      <%= form_tag empty_cart_path, method: :put do %>
        <p id="clear_cart_link" data-hook>
          <%= submit_tag Spree.t(:empty_cart), class: 'btn btn-default' %>
          <%= Spree.t(:or) %>
          <%= link_to Spree.t(:continue_shopping), root_path, class: 'continue' %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
