<% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>

<nav id="taxonomies" class="sidebar-item" data-hook>
  <% taxonomy = Spree::Taxon.find_by(name: 'Categories') %>
  <% cache [I18n.locale, taxonomy, max_level, @taxon, Spree::Config[:theme_name], Spree::Taxon.pluck(:is_featured).to_sentence] do %>
    <h4 class='taxonomy-root'><%= Spree.t(:shop_by_taxonomy, :taxonomy => taxonomy.name) %></h4>
    <%= product_taxons_tree(taxonomy.root, @taxon, 3) %>
  <% end %>
</nav>
