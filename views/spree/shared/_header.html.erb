<div id="spree-header">
  <header id="header" data-hook class="container-fluid">
      <figure id="logo" class="navbar-brand" data-hook>
        <%= logo %>
      </figure>
      <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
  </header>
  <div class="container-fluid">
    <div class='dropdown container-fluid'>
      <% taxon = Spree::Taxon.first %>
      <%= taxons_header(taxon.root, taxon, 2) %>
    </div>
    <div class="header-shipping global-shipping row">
      <div class='shipping-message col-sm-10'>Free shipping on order $90 {Enter Code in cart : ship90} more Detail</div>
      <div class="col-sm-2 text-right">
        <span class="notification-block">
          <i class="fa fa-bell-o"></i> 10
        </span>
      </div>
    </div>
  </div>
</div>
