<% content_for :header do -%>
  <%= javascript_include_tag 'yoda/javascripts/spree/frontend/product_show' -%>
<% end -%>

<%= form_for :order, :url => populate_orders_path do |f| %>
  <div class="" id="inside-product-cart-form" data-hook="inside_product_cart_form" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
    <% if @product.variants_and_option_values(current_currency).any? %>
      <div id="product-variants" class="col-md-6">
        <h3 class="product-section-title"><%= Spree.t(:variants) %></h3>
        <ul class="list-group">

          <% @product.uniq_color_options.each do |color_option| %>
            <span style="background-color: <%= color_option[1] %>" data-color-option-id = <%= color_option[0] %> >
              <%= color_option %>
            </span>
          <% end %>

          <% @product.variants_and_option_values(current_currency).each_with_index do |variant, index| %>
            <li data-select-color-option-id=<%= color_option_value(variant).id %> >
              <%= radio_button_tag "variant_id", variant.id, index == 0, 'data-price' => variant.price_in(current_currency).money, 'data-cost' => cost_price(variant), 'data-percentage-profit' => percentage_diff(variant) %>
              <%= label_tag "variant_id_#{ variant.id }" do %>
                <span class="variant-description">
                  <%= color_variant_options variant %>
                </span>
                <% unless variant.can_supply? %>
                  <span class="out-of-stock"><%= Spree.t(:out_of_stock) %></span>
                <% end %>
              <% end %>
            </li>
          <% end%>
        </ul>
      </div>
    <% else %>
      <%= hidden_field_tag "variant_id", @product.master.id %>
    <% end %>

    <% if @product.price_in(current_currency) and !@product.price.nil? %>
      <div data-hook="product_price">
        <div id="product-price">
          <div>
            <span class="lead price selling" itemprop="price">
              <%= display_price(@product) %>
            </span>
            <span class="lead price cost" itemprop="price">
              <%= cost_price(@product) %>
            </span>
            <span class="lead price percentage" itemprop="price">
              <%= percentage_diff(@product) %>
            </span>
            <span itemprop="priceCurrency" content="<%= @product.currency %>"></span>
          </div>

          <% if @product.master.can_supply? %>
            <link itemprop="availability" href="https://schema.org/InStock" />
          <% elsif @product.variants.empty? %>
            <br />
            <span class="out-of-stock"><%= Spree.t(:out_of_stock) %></span>
          <% end %>
        </div>

        <div class="add-to-cart">
          <br/>
          <div class="input-group">
            <span data-behaviour='increment-product-quantity'>UP</span>
            <%= text_field_tag :quantity, 1, :class => 'title form-control', data: { hook: 'product-quantity' } %>
            <span data-behaviour='decrement-product-quantity'>DOWN</span>
              <%= button_tag :class => 'btn btn-success', :id => 'add-to-cart-button', :type => :submit do %>
                <%= Spree.t(:add_to_cart) %>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    <% else %>
      <div id="product-price">
        <br>
        <div><span class="price selling" itemprop="price"><%= Spree.t('product_not_available_in_this_currency') %></span></div>
      </div>
    <% end %>
  </div>
<% end %>
