<% if @product_properties.present? && empty_product_properties_count(@product_properties) > 0 %>
  <div data-hook="product_properties" class="col-sm-12 cmn-detail-block">
    <h3 class="cmn-block-heading">
      <span class="heading-slogan"><%= Spree.t('properties')%></span>
    </h3>
    <table id="product-properties" class="table table-bordered margin-bottom-none" data-hook>
      <tbody>
        <% @product_properties.each do |product_property| %>
          <% css_class = cycle('even', 'odd', :name => "properties") %>
          <tr class="<%= css_class %>">
            <td><strong><%= product_property.property.presentation %></strong></td>
            <td><%= product_property.value %></td>
          </tr>
        <% end %>
        <% reset_cycle('properties') %>
      </tbody>
    </table>
  </div>
<% end %>
