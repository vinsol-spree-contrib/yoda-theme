<% unless @product.relations.empty? %>
  <article class="row">
    <div class="col-sm-12 p-may-like">
      <h3 class="cmn-block-heading">
        <span class="heading-slogan">YOU MIGHT ALSO LIKE</span>
        <span class="heading-text">Lorem Ipsum is simply</span>
      </h3>
      <div class="row">
        <% @product.relations.limit(3).each do |relation| %>
          <div class="col-sm-4 text-center prod-col">
            <%= render 'related_product_details', product: relation.related_to %>
          </div>
        <% end %>
      </div>
      <div class="cmn-border-box row narrow"></div>
    </div>
  </article>
<% end %>
